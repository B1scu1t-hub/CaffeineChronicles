doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Caffeine Chronicles - About
        link(rel='stylesheet' , href='/stylesheets/style.css')
        script(src="Script.js")

        style.
            .profile-container {
                position: relative;
                display: inline-block;
                padding-left: 510px;
                padding-bottom: 80px;
            }

            .profile-icon {
                cursor: pointer;
                /* Add styling for the icon here */
            }

            .dropdown-content {
                display: none;
                position: absolute;
                right: 0;
                background-color: #ff7f50;
                min-width: 160px;
                box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
                z-index: 1;
            }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

            .dropdown-content a:hover {
                background-color: #f9f9f9;
            }

            .profile-container:hover .dropdown-content {
                display: block;
            }
    body
        header
            div.container
                div#branding
                    h1
                        span.highlight Caffeine Chronicles

                nav
                    ul
                        li
                            a(href="/") Home
                        li
                            a(href="catalog") Catalog
                        li
                            a(href="about") About
                        li.current
                            a(href="contact") Contact
                        li
                            a(href="cart") Cart
                        li
                            if isAuthenticated
                                a(href="/userinfo")
                                    div.NavButton User

                                li
                                    a(href="/logout")
                                        div.NavButton Logout
                                li
                                    a(href="/orders")
                                        div.NavButton Orders
                            else
                                a(href="/login")
                                    div.NavButton Log In



        img(src='../images/alt-showcase.jpeg', alt='Showcase photo', width='100%')
        div.container
            section#main-col
                h2.page-title Need to get a hold of us?
                    p Contact us at CaffeineChroniclesLLC@live.com
                    br

            aside#sidebar
                div.dark
                    h3 Get Our Newsletter
                    form.quote
                        div
                            label
                            br
                            input(type="email", placeholder="Enter Email...")
                        button.button_1(type="submit", onclick="myFunction()") Subscribe
