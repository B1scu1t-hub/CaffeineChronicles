// homepage.pug
doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Caffeine Chronicles
    link(rel='stylesheet' , href='homepagestyle.css')
  body
    script(src='Script.js')
    header
      .container
        #branding
          h1
            span.highlight Caffeine
            |  Chronicles
        nav
          ul
            li.current
              a(href='/') Home
            li
              a(href='catalog') Catalog
            li
              a(href='about') About
            li
              a(href='contact') Contact
            li
              a(href='cart') Cart
    section#showcase
      .container
        h1 Welcome to the World of Books and Coffee
        p Discover your next great read with us.
    .container
      section#main-col
        h2.page-title Featured Books
        // Add featured books here
        .book
          h3 Book Title 1
          p Description for Book Title 1.
        // Repeat for other books
      aside#sidebar
        .dark
          h3 Get Our Newsletter
          form.quote
            div
              label Email
              br
              input(type='email', placeholder='Enter Email...')
            button.button_1(type='submit') Subscribe
    footer
      p Caffeine Chronicles &copy; 2024
