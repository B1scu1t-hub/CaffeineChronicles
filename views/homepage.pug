// homepage.pug
doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Caffeine Chronicles
    link(rel='stylesheet' , href='/stylesheets/style.css')
    style.
      .book-item {
        margin-bottom: 100px;
      }
  body
    script(src='Script.js')
    header
      .container
        #branding
          h1
            span.highlight Caffeine Chronicles
        nav
          ul
            li.current
              a(href='/') Home
            li
              a(href='catalog') Catalog
            li
              a(href='about') About
            li
              a(href='contact') Contact
            li
              a(href='cart') Cart
            li
              if isAuthenticated
                a(href="/userinfo")
                  div.NavButton User

                li
                  a(href="/logout")
                    div.NavButton Logout
              else
                a(href="/login")
                  div.NavButton Log in


    section#showcase
      .container
        h1 Welcome to the World of Books and Coffee
        p Discover your next great read with us.
    .container
      section#main-col
        h2.page-title Featured Books
          h3 book title
            p book description
      aside#sidebar
        .dark
          h3 Get Our Newsletter
          form.quote
            div
              label Email
              br
              input(type='email', placeholder='Enter Email...')
            button.button_1(type='submit', onclick="myFunction()") Subscribe
    footer
      p Caffeine Chronicles &copy; 2024

script.
      function myFunction() {
        alert("Thanks for subscribing!");
        window.location.reload();
      }