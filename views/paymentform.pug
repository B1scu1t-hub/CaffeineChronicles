doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Mock Payment Form
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="Script.js")
  body
    header

      header
        .container
          #branding
            h1
              span.highlight Caffeine Chronicles
          nav
            ul
              li
                a(href="/") Home
              li.current
                a(href="catalog") Catalog
              li
                a(href="about") About
              li
                a(href="contact") Contact
              li
                a(href="cart") Cart
              li
                a(href='newaccount') Create Account
              li
                a(href='login') Login
    .payment-container
      form#paymentForm
        h2 Payment Details
        .form-group
          label(for='nameOnCard') Name on Card
          input(type='text', id='nameOnCard', required)
        .form-group
          label(for='cardNumber') Card Number
          input(type='text', id='cardNumber', pattern='\\d*', maxlength='16', required)
        .form-group
          label(for='expiryDate') Expiry Date
          input(type='month', id='expiryDate', required)
        .form-group
          label(for='cvv') CVV
          input(type='text', id='cvv', pattern='\\d*', maxlength='3', required)
        button(type='submit') Pay Now

    </div>
</body>
</html>
