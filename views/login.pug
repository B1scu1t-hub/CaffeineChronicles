doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Login Here
        link(rel='stylesheet' , href='homepagestyle.css')

        script(src="Script.js")
    body
        if errors
            ul
                each error in errors
                    li= error.msg
        header
            div.container
                div#branding
                    h1
                        span.highlight Caffeine Chronicles
                nav
                    ul
                        li
                            a(href="/") Home
                        li
                            a(href="catalog") Catalog
                        li
                            a(href="about") About
                        li
                            a(href="contact") Contact
                        li
                            a(href="cart") Cart
                        li
                            a(href='newaccount') Create Account
                        li.current
                            a(href='login') Login
        section#showcase
            div.container
                h1 Welcome to the World of Books and Coffee
                    p Discover your next great read with us.

        div.container
            section#main-col
                h2.page-title Welcome Back!
                form(action='placehold' method="POST")
                    div
                        label(for='Username') Username:
                        input(type='text' id='Username' name='Username' required)
                        br

                    div
                        label(for='Password') Password:
                        input(type='text' id='Password' name='Password' required)

                    div
                        input(type='submit' value='Submit')
                        br
                        br


            aside#sidebar
                div.dark
                    h3 Get Our Newsletter
                    form.quote
                        div
                            label Email
                            br
                            input(type="email", placeholder="Enter Email...")
                        button.button_1(type="submit") Subscribe
        footer
            p Caffeine Chronicles Â© 2024