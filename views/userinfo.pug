doctype html
html(lang="en")
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title Check out your information!
        // Close the title tag
        link(rel='stylesheet' href='/stylesheets/style.css')
        script(src='Script.js')
    header
        .container
            #branding
                h1
                    span.highlight Caffeine Chronicles
            nav
                ul
                    li
                        a(href='/') Home
                    li
                        a(href='catalog') Catalog
                    li
                        a(href='about') About
                    li
                        a(href='contact') Contact
                    li
                        a(href='cart') Cart
                    li.current
                        if isAuthenticated
                            a(href="/userinfo")
                                div.NavButton User

                            li
                                a(href="/logout")
                                    div.NavButton Logout
                            li
                                a(href="/orders")
                                    div.NavButton Orders
                        else
                            a(href="/login")
                                div.NavButton Log In
    img(src='../images/alt-showcase.jpeg', alt='Showcase photo', width='100%')
    .container
        section#main-col
            h2.page-title Verify your information below.
            form(action='userinfo' method='POST')
                div
                    label(for='lastName') Last Name:
                    input#lastName(type='text' name='lastName' required='' value= Customer.LastName)
                div
                    label(for='firstName') First Name:
                    input#firstName(type='text' name='firstName' required='' value= Customer.FirstName)
                div
                    label(for='phone') Phone Number:
                    input#phone(type='text' name='phone' required='' value= Customer.PhoneNumber)
                div
                    label(for='email') Email Address:
                    input#email(type='email' name='email' required= '' value= Customer.EmailAddress readonly= ' ')
                div
                    label(for='address') Address:
                    input#address(type='text' name='address' required='' value= Customer.Address)

                div
                    label(for='city') City:
                    input#city(type='text' name='city' required='' value= Customer.City)
                div
                    label(for='state') State:
                    input#state(type='text' name='state' required='' value= Customer.State)
                div
                    label(for='postalCode') Postal Code:
                    input#postalCode(type='text' name='postalCode' required='' value= Customer.PostalCode)

                div
                    button(type='submit' value='Save') Save
                    br
                    br

        aside#sidebar
            .dark
                h3 Get Our Newsletter
                form.quote
                    div
                        label
                        br
                        input(type='email' placeholder='Enter Email...')
                    button.button_1(type='submit' onclick='myFunction()') Subscribe
    footer
        p Caffeine Chronicles &copy; 2024

script.
    function myFunction() {
        alert("Thanks for subscribing!");
        window.location.reload();
    }