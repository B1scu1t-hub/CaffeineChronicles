doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Books List
    link(rel='stylesheet', href='/stylesheets/style.css')
    style.
      /* Add CSS to style the book items */
      .book-item {
        margin-bottom: 100px;
      }
      /* Add a class for books to set the font size to 14pt */
      .book-details {
        font-size: 14pt;
      }
body
    script(src="Script.js")
    header
      .container
        #branding
          h1
            span.highlight Caffeine Chronicles
        nav
          ul
            li
              a(href="/") Home
            li.current
              a(href="catalog") Catalog
            li
              a(href="about") About
            li
              a(href="contact") Contact
            li
              a(href="cart") Cart
            li
              a(href='newaccount') Create Account
            li
              a(href='login') Login
    section#showcase
      .container
        h1 Welcome to the World of Books and Coffee
        p Discover your next great read with us.
    .container
      section#main-col
        h2.page-title Catalog
            ul
                each book in books
                    li.book-item /* Add a class for book details */
                      h3.book-details= book.BookTitle
                      p.book-details= book.Author
                      p.book-details= `$${book.Price}`
                      p.book-details= book.Desc
      aside#sidebar
        div.dark
          h3 Get Our Newsletter
          form.quote
            div
              label Email
              br
              input(type="email", placeholder="Enter Email...")
            button.button_1(type="submit") Subscribe
    footer
      p Caffeine Chronicles &copy; 2024

